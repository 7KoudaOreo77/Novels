<h2>ログイン</h2>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%#= f.label :ニックネーム %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名"  %>
  </div>

  <div class="field">
    <%#= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <%# = f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
  </div>

  <!--<%# if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%#= f.check_box :remember_me %>-->
  <!--    <%#= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<%# end %>-->

  <div class="actions">
    <%= f.submit "ログイン", class:"btn-primary" %>
  </div>
<% end %>
</body>

<%= render "public/shared/links" %>
