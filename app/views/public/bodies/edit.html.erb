<h3>
<% if @novel_body.present? && @novel_body.errors.any? %>
 <%= @novel_body.errors.count %>件のエラーがあります。
 <ul>
  <% @novel_body.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
</h3>

<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
 <h2 class="mt-3">シリーズ編集</h2>
  <%= form_with model: @novel_body, url: public_novel_body_path(@novel,@novel_body), method: :put do |f| %>


  <div class="form-group">
    <h6>サブタイトル（章など）</h6>
      <%= f.text_field :subtitle, size: "100x20" %>
  </div>

  <div class="form-group">
    <h6>本文（[page]でページ追加）</h6>
      <%= f.text_area :body, size: "100x20" %>
  </div>


  <div class="form-group">
 <%= f.submit "変更を保存", class:"btn btn-sm  btn-block btn-primary" %>
  </div>
  <% end %>

</div>
