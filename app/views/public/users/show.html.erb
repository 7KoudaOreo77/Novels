<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'info', user: @user %>

    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
      <%= link_to "いいねした投稿",  favorites_public_user_path(current_user) %>
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>

      <tbody>
       <% @novels.each do |novel| %>
        <tr>
         <td>
          <%= link_to public_user_path(@user.id) do %>
           <%= image_tag novel.user.get_profile_image(100,100) %>
          <% end %>
         </td>
         <td>
          <%= link_to public_novel_path(novel.id), class:"novel_id" do %>
           <%= novel.title %>
          <% end %>
         </td>
         <td><%= novel.body.truncate(50) %></td>
         <td>

         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
     <%= paginate @novels %>
    </div>