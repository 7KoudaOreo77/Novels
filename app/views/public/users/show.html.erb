<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'info', user: @user %>

    </div>

    <div class="col-md-8 offset-md-1">
     <h2 class="font-weight-bold">マイページ</h2>
     <table class="table table-hover table-inverse">
      <%= link_to "いいね一覧",  favorites_public_user_path(current_user) %>
      <%= link_to "しおり一覧",  "#" %>

      <thead>
       <tr>
        <th></th>
        <th>タイトル</th>
        <th>本文</th>
        <th colspan="3"></th>
       </tr>
      </thead>

      <tbody>
       <% @novels.each do |novel| %>
        <tr>
         <td>
          <% if novel.image.attached? %>
            <%= image_tag novel.get_novel_image(100,120) %>
           <% else %>
            <%= image_tag '瓶はね', size: "100x120" %>
           <% end %>
         </td>
         <td>
          <%= link_to public_novel_path(novel.id), class:"novel_id" do %>
           <%= novel.title %>
          <% end %>
         </td>
         <!--できたらキャプションにしたい-->
         <!--<td><%= novel.caption.first&.truncate(50) %></td>-->
         <td><%= novel.bodies.first&.body&.truncate(50) %></td>
         <td>

         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
     <%= paginate @novels %>
    </div>