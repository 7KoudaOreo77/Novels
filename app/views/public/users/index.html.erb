<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'info', user: @user %>

   </div>
   <div class="col-md-8 offset-md-1">
    <h2>ユーザー一覧</h2>
      <table class="table">
       <thead>
        <tr>
         <th>　　アイコン</th>
         <th>ユーザー名</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>

         <% @users.each do |user| %>
          <tr>
           <td>
           <% if user.profile_image.attached? %>
            <%= image_tag user.get_profile_image(100,100) %>
           <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
           <% end %>

          </td>
          <td><%= user.name %></td>
          <td>
           <%= link_to"投稿作品", public_user_path(user.id) %>
          </td>
          </tr>
         <% end %>

       </tbody>
      </table>
    </div>
  </div>
 </div>