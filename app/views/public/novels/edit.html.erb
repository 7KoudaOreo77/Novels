<main>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
    	<%= form_with model: @novel, url: public_novel_path, method: :patch do |f| %>
    	 <div class="form-group">
        <h6>Title</h6>
         <%= f.text_field :title %>
       </div>
       <div class="form-group">
        <h6>Opinion</h6>
         <%= f.text_area :body %>
       </div>
       <div class="field">
        <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag,value: @tag_list,class:"form-control"%>
       </div>

       <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success" %>
       </div>
      <% end %>
  		<%=link_to"Show", public_novel_path, class:"book_id" %> |
  		<%=link_to"Back", public_novels_path, class:"back" %>
    </div>
   </div>
  </div>
