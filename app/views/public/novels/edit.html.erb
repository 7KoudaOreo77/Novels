<% if @novel.errors.any? %>
  <%= @novel.errors.count %>件のエラーがあります。
  <ul>
    <% @novel.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<main>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>投稿編集</h1>
    	<%= form_with model: @novel, url: public_novel_path, method: :patch do |f| %>
    	 <div class="form-group">
        <h6>Title</h6>
         <%= f.text_field :title %>
       </div>

       <div class="field">
        <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag,value: @tag_list,class:"form-control"%>
       </div>

       <div class="form-group">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
       </div>
      <% end %>
  		<%=link_to"一覧へ", public_novel_path, class:"book_id" %> |
  		<%=link_to"戻る", public_novels_path, class:"back" %>
  		
  		
  		<div class="row mt-4">
      <div class="form-inline mx-auto">
        <% if @post_recipe.is_draft == true %>
          <%= f.submit "レシピを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
          <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
        <% else %>
          <%= f.submit "レシピを更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
        <% end %>
      </div>
    </div>
    <div class="mt-4 pb-3 text-center">
      <u><%= link_to "レシピを削除", "/post_recipes/#{@post_recipe.id}", method: :delete, data: {confirm: "このレシピを削除しますか？"}, class:'text-danger' %></u>
    </div>
  <% end %>
  		
  		
    </div>
   </div>
  </div>
</main>