<h3>
<% if @novel.present? && @novel.errors.any? %>
 <%= @novel.errors.count %>件のエラーがあります。
 <ul>
  <% @novel.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
</h3>

<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
 <h2 class="mt-3 font-weight-bold">新規投稿</h2>

  <%= form_with model: @novel, url: public_novels_path, method: :post do |f| %>

   <!--<%= f.radio_button :is_deleted, :true %>-->
   <!--<%= f.label :is_deleted, "シリーズ作品" , value: :true %>-->
   <!--<%= f.radio_button :is_deleted, :false %>-->
   <!--<%= f.label :is_deleted, "読み切り作品", value: :false %>-->

  <div class="form-group">
   <label for="inputImage">表紙</label><br>
    <%= f.file_field :image, placeholder: "表紙画像", accept: "image/*" %>
  </div>

  <div class="form-group">
    <h6>シリーズ名</h6>
      <%= f.text_field :title, size: "100x20" %>
  </div>

  <!--<div class="form-group">-->
  <!--  <h6>キャプション</h6>-->
  <!--    <%= f.text_field :caption, size: "100x20" %>-->
  <!--</div>-->

  <div class="form-group">
   <%= f.label"タグ（,で区切ると複数タグ登録）" %><br>
   <%= f.text_field :tag, size: "100x20"%>
  </div>

 <%= f.fields_for :bodies do |t| %>
  <div class="form-group">
    <h6>サブタイトル（章など）</h6>
      <%= t.text_field :subtitle, size: "100x20" %>
  </div>

  <div class="form-group">
    <h6>本文（[page]でページ追加）</h6>
      <%= t.text_area :body, size: "100x20" %>
  </div>
 <% end %>

  <div class="my-4 form-row text-center">
   <div class="col-12">
   <%= f.submit "投稿", class:"btn btn-sm  btn-block btn-success" %>
   </div>
  </div>
  <% end %>


</div>