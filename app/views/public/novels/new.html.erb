 <h2 class="mt-3">New book</h2>
  <%= form_with model: @novel, url: public_novels_path, method: :post do |f| %>
  <div class="form-group">
    <h6>タイトル</h6>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h6>本文</h6>
      <%= f.text_area :body %>
  </div>
  <div class="form-group">
   <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
   <%= f.text_field :tag%>
  </div>
  <div class="form-group">
   <%= f.submit "Create Book", class:"btn btn-sm btn-success" %>
  </div>
  <% end %>
