<h3>
<% if @novel.present? && @novel.errors.any? %>
 <%= @novel.errors.count %>error prohibited this obj from being saved:
 <ul>
  <% @novel.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
</h3>

 <h2 class="mt-3">新規投稿</h2>

  <%= form_with model: @novel, url: public_novels_path, method: :post do |f| %>

   <%= f.radio_button :is_deleted, :true %>
   <%= f.label :is_deleted, "シリーズ作品" , value: :true %>
   <%= f.radio_button :is_deleted, :false %>
   <%= f.label :is_deleted, "読み切り作品", value: :false %>

  <div class="form-group">
   <label for="inputImage">表紙</label><br>
    <%= f.file_field :image, placeholder: "表紙画像", accept: "image/*" %>
  </div>

  <div class="form-group">
    <h6>タイトル</h6>
      <%= f.text_field :title %>
  </div>

  <div class="form-group">
   <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
   <%= f.text_field :tag%>
  </div>

 <%= f.fields_for :bodies do |t| %>
  <div class="form-group">
    <h6>サブタイトル</h6>
      <%= t.text_field :subtitle %>
  </div>

  <div class="form-group">
    <h6>本文</h6>
      <%= t.text_area :body, size: "100x20" %>
  </div>
 <% end %>

  <div class="form-group">
   <%= f.submit "Create Book", class:"btn btn-sm btn-success" %>
  </div>
  <% end %>
