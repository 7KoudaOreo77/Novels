<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'public/users/info', user: @user %>
     <%= render 'list', novel: @novel %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>題名</th>
       <th>本文</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>

     <h5>タグリスト</h5>
     <% @tag_list.each do |list|%>
      <%=list.name %>
      <%="(#{list.novels.count})" %><% end %>

       <% @novels.each do |novel| %>
       <tr>
        <td>
         <%= link_to public_user_path(novel.user) do %>
          <%= image_tag novel.user.get_profile_image(100,100) %>
         <% end %>
        </td>
        <td>
         <%= link_to public_novel_path(novel.id), class:"novel_id" do %>
          <%= novel.title %>
         <% end %>
        </td>
        <td><%= novel.body.truncate(50) %></td>
        <td><i class="fas fa-tag"></i>
         <%#= link_to public_novel_tags_path do %>
          <%= novel.tags.map(&:name).join(', ') %>
         <%# end %>
        </td>
        </tr>

       <% end %>
       </tbody>
    </table>
   </div>
