<h1>会員一覧</h1>

 <table class="table", class="bg-secondary">
  <thead class="text-center">
   <th>会員ID</th>
   <th>ユーザー</th>
   <th>メールアドレス</th>
   <th>ステータス</th>
  </thead>
  <tbody class="text-center">
  <% @users.each do |user| %>
   <tr>
    <td><%= user.id %></td>
    <td>
     <%= link_to admin_user_path(user.id) do %>
      <%= user.name %>
     <% end %>
    </td>
    <td><%= user.email %></td>
    <td>
     <% if user.is_deleted %>
      <p>利用停止</p>
     <% else %>
      <p>有効</p>
     <% end %>
    </td>
   </tr>
  <% end %>
  </tbody>
 </table>

<%= paginate @users %>