<body class="text-center">
<h2>管理者ログイン</h2>

<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="my-4", class="field">

    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名"  %>
  </div>

  <div class="my-4", class="field">
    <%#= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
  </div>

  <div class="my-4", class="field">
    <%# = f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
  </div>

  <div class="my-4", class="actions">
    <%= f.submit "ログイン", class:"btn-primary" %>
  </div>
<% end %>
</body>

<%= render "admin/shared/links" %>
